.row
  .col-md-12
    %h1 Birmingham Dog Shelters
    %hr

.row
  .col-md-12
    -@shelters.each do |shelter|
      .row
        .shelter-item{id: "shelter-#{shelter.id}"}  
          .col-md-8
            %h2=link_to shelter.name, shelter_url(shelter)
            %br
            .shelter-description
              =simple_format shelter.description
            %breed_spec
            %p=link_to "Details", shelter_url(shelter), class: "btn btn-primary"
          .col-md-4
            -if shelter.image_url
              =image_tag shelter.image_url, alt: shelter.name
            -else
              &nbsp;

